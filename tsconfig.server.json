{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-server",
    "rootDir": "server",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
